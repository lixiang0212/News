<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:id="@+id/fragment_one_relative"
        >
        <android.support.design.widget.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/tablayout_bg"
            app:tabIndicatorColor="#0077fe"
            app:tabSelectedTextColor="#0077fe"
            app:tabTextColor="@color/colorBlack"
            app:tabTextAppearance="@style/TabLayoutTextStyle"

            android:id="@+id/fragment_one_tabLayout"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/fragment_one_add"
            android:background="@drawable/fragment_add_selector"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_one_view_pager" />
</LinearLayout>