<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="zhuoxin.com.viewpagerdemo.activity.LeadActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lead_view_pager"
        >

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
       android:layout_centerInParent="true">
    <zhuoxin.com.viewpagerdemo.myview.leadView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle_one"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:color="@color/colorBlack"
        android:layout_marginLeft="10dp"
    />
     <zhuoxin.com.viewpagerdemo.myview.leadView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/circle_two"
         android:layout_weight="1"
         app:color="@color/colorWhite"
         android:layout_marginLeft="10dp"

            />
     <zhuoxin.com.viewpagerdemo.myview.leadView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/circle_three"
         android:layout_weight="1"
         app:color="@color/colorWhite"
         android:layout_marginLeft="10dp"
            />


    </LinearLayout>

</RelativeLayout>
