<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/fragment_hot_find_bg"
        android:layout_width="match_parent"
        android:layout_height="32dp">
    <Button
        android:id="@+id/fragment_hot_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:text="搜索"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/colorDeepSkyBlue"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"
        />
    <EditText
        android:hint="输入关键字查询"
        android:textSize="13sp"
        android:textColor="@color/colorDeepSkyBlue"
        android:layout_toLeftOf="@+id/fragment_hot_btn"
        android:layout_toRightOf="@+id/fragment_hot_iv"
        android:layout_centerVertical="true"
        android:id="@+id/fragment_hot_et"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/colorGainsboro"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/fragment_hot_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@drawable/find_defult"
        />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:background="@color/colorGainsboro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_hot_view_pager" />
</LinearLayout>